{
  "identifier": "default",
  "description": "Default capabilities",
  "windows": ["main"],
  "remote": {
    "urls": ["http://localhost:5173", "http://127.0.0.1:5173"]
  },
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-save",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$HOME/**" }, { "path": "/home/**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$HOME/**" }, { "path": "/home/**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "/home/**" },
        { "path": "/home/Baudouin/Documents/Projets/11ty-jardin/**" }
      ]
    }
  ]
}
